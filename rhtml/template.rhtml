      /*    }*/

      /*    .text,*/
      /*    h1 span {*/
      /*        width: 470px;*/
      /*    }*/

      /*    .text {*/
      /*        margin-top: 2em;*/
      /*    }*/

      /*}*/

      /*@media (max-width: 500px) {*/

      /*    h1 {*/
      /*        font-size: 2em;*/
      /*    }*/

      /*    .text,*/
      /*    h1 span {*/
      /*        width: 320px;*/
